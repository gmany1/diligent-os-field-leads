generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums removed for SQLite compatibility
// Role: EXECUTIVE, MANAGER, FIELD_LEAD_REP, IT_ADMIN
// LeadStage: COLD, WARM, HOT, QUOTE, WON, LOST

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String // Hashed password
  role      String   @default("FIELD_LEAD_REP") // Was Enum Role
  territory String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  leads       Lead[]
  activities  Activity[]
  quotes      Quote[]
  commissions Commission[]
}

model Lead {
  id       String  @id @default(cuid())
  name     String
  address  String?
  phone    String? // Normalized to E.164
  stage    String  @default("COLD") // Was Enum LeadStage
  branch   String?
  industry String?
  source   String? @default("MANUAL") // REFERRAL, COLD_CALL, WEBSITE, LINKEDIN, MANUAL

  assignedToId String?
  assignedTo   User?   @relation(fields: [assignedToId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  activities  Activity[]
  quotes      Quote[]
  commissions Commission[]

  vacancies     Int?    @default(0)
  vacanciesNote String?

  @@index([phone])
  @@index([address])
}

model Activity {
  id          String   @id @default(cuid())
  type        String // e.g., CALL, EMAIL, MEETING, NOTE, REMINDER
  description String
  date        DateTime @default(now())

  leadId String
  lead   Lead   @relation(fields: [leadId], references: [id])

  userId String
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
}

model Quote {
  id     String  @id @default(cuid())
  amount Decimal
  status String // DRAFT, SENT, ACCEPTED, REJECTED
  pdfUrl String?

  leadId String
  lead   Lead   @relation(fields: [leadId], references: [id])

  createdById String
  createdBy   User   @relation(fields: [createdById], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  commissions Commission[]
}

model Commission {
  id          String  @id @default(cuid())
  amount      Decimal
  rateApplied Decimal // e.g. 0.10
  status      String  @default("PENDING") // PENDING, PAID, REJECTED

  userId String
  user   User   @relation(fields: [userId], references: [id])

  leadId String?
  lead   Lead?   @relation(fields: [leadId], references: [id])

  quoteId String?
  quote   Quote?  @relation(fields: [quoteId], references: [id])

  createdAt DateTime  @default(now())
  paidAt    DateTime?
}
