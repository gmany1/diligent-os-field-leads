generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
  CEO
  AREA_DIRECTOR
  CAO
  DOO
  BRANCH_MANAGER
  STAFFING_REP
  SALES_REP
  IT_SUPER_ADMIN
  // Legacy roles kept for migration safety if needed, but intended to be replaced
  EXECUTIVE
  MANAGER
  FIELD_LEAD_REP
  IT_ADMIN
}

enum LeadStage {
  COLD
  WARM
  HOT
  QUOTE
  WON
  LOST
}

model Branch {
  id        String   @id @default(cuid())
  name      String
  address   String
  city      String
  state     String
  code      String   @unique // BR-001

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users     User[]
  leads     Lead[]
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String // Hashed password
  role      Role     @default(STAFFING_REP)
  territory String?
  
  branchId  String?
  branch    Branch?  @relation(fields: [branchId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  leads       Lead[]
  activities  Activity[]
  quotes      Quote[]
  commissions Commission[]
  auditLogs   AuditLog[]
}

model Lead {
  id       String    @id @default(cuid())
  name     String
  address  String?
  phone    String?   // Considerar cifrado en capa de aplicación o PGCrypto
  email    String?
  stage    LeadStage @default(COLD)
  
  // Retro-compatibility: keep 'branch' string if needed, but favor relation
  branchString String? @map("branch") 
  
  branchId String?
  branch   Branch?   @relation(fields: [branchId], references: [id])

  industry String?
  source   String?   @default("MANUAL") // REFERRAL, COLD_CALL, WEBSITE, LINKEDIN, MANUAL
  notes    String?   // Notas generales

  assignedToId String?
  assignedTo   User?     @relation(fields: [assignedToId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  activities  Activity[]
  quotes      Quote[]
  commissions Commission[]

  vacancies     Int?    @default(0)
  vacanciesNote String?

  @@index([phone])
  @@index([address])
  @@index([assignedToId])
}

model Activity {
  id          String   @id @default(cuid())
  type        String   // e.g., CALL, EMAIL, MEETING, NOTE, REMINDER, HANDOFF
  description String
  date        DateTime @default(now())

  leadId String
  lead   Lead   @relation(fields: [leadId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
}

model Quote {
  id     String  @id @default(cuid())
  amount Float
  status String  // DRAFT, SENT, ACCEPTED, REJECTED
  pdfUrl String?

  leadId String
  lead   Lead   @relation(fields: [leadId], references: [id])

  createdById String
  createdBy   User   @relation(fields: [createdById], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  commissions Commission[]
}

model Commission {
  id          String  @id @default(cuid())
  amount      Float
  rateApplied Float // e.g. 0.1000
  status      String  @default("PENDING") // PENDING, PAID, REJECTED

  userId String
  user   User   @relation(fields: [userId], references: [id])

  leadId String?
  lead   Lead?   @relation(fields: [leadId], references: [id])

  quoteId String?
  quote   Quote?  @relation(fields: [quoteId], references: [id])

  createdAt DateTime  @default(now())
  paidAt    DateTime?
}

// Nueva tabla para Auditoría y Seguridad
model AuditLog {
  id        String   @id @default(cuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  action    String   // CREATE, UPDATE, DELETE, LOGIN, EXPORT
  entity    String   // LEAD, USER, COMMISSION
  entityId  String?
  details   String?  // JSON stringified con los cambios
  ipAddress String?
  userAgent String?
  
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([action])
}
